#include <iostream>
#include <stdlib.h>
#include <time.h>

using namespace std;

class game
{
	private:
		bool active;
	public:
		game ()
		{
			active = true;
		}
		
		bool getactive ()
		{
			return active;
		}
		
		void won ()
		{
			active = false;
		}
};

class plyr : public game
{
	private:
		int posicion;
		string nombre;
	public:
		plyr (string nombre)
		{
			this -> nombre = nombre;
			posicion = 1;
		}
		
		string getname ()
		{
			return nombre;
		}
		
		void diceroll (int up, game *oca)
		{
			int temp = 63, temp2 = 63;
			cout << nombre << " saco un " << up << " fue de la posicion " << posicion << " a ";
			posicion = posicion + up;
			if (posicion > 63)
			{
				cout << "SE HA PASADO";
				temp = posicion - temp;
				cout << " POR " << temp << " ESPACIOS ";
				posicion = 63 - temp ;
			}
			cout << posicion << endl;
			if (posicion == 63)
			{
				cout << endl << endl << nombre << " AH GANADO" << endl << endl;
				oca -> won();
			}
			cout << endl;
		}
};
